<root>
  <!-- 
  inputs: 
    - place_pose
    - approach_offset 
  -->
  <BehaviorTree ID="PlaceSubTree">

    <Sequence name="place object sequence">

      <ManipulationAction
        name="move arm to target area"
        server_name="manip_as"
        id="arm_pose"
        pose="{place_pose}"
        offset="{approach_offset}"
      />

      <ManipulationAction
        name="approach surface"
        server_name="manip_as"
        id="arm_approach"
        offset="{approach_offset}"
      />

      <ManipulationAction
        name="open gripper and release object"
        server_name="manip_as"
        id="gripper_open"
      />

      <ManipulationAction
        name="retract arm"
        server_name="manip_as"
        id="arm_retreat"
        offset="{approach_offset}"
      />

      <UpdatePose output_pose="{object_pose}" input_pose="{place_pose}" />

    </Sequence>
  </BehaviorTree>

</root>
    