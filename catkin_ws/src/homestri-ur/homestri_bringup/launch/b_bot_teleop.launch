<launch>

    <param name="joy_node/dev" type="str" value="/dev/input/js0" />
    <node pkg="joy" type="joy_node" name="joy_node" respawn="true" output="screen"/>
    <node pkg="homestri_bringup" type="xbox360_twist.py" name="xbox360_twist"/>

    <remap from="servo_server/cmd_vel" to="joy/twist" />
    <node name="servo_server" pkg="moveit_servo" type="servo_server" output="screen">
        <rosparam command="load" file="$(find homestri_moveit_servo)/config/real_joystick_servo_config.yaml" />
    </node>

</launch>
